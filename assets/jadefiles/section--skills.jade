  .section--skills__projects
  
    input(type='radio', name='skill', value='html5', id='html5')
    input(type='radio', name='skill', value='css3', id='css3')
    input(type='radio', name='skill', value='sass', id='sass')
    input(type='radio', name='skill', value='javascript', id='javascript')
    input(type='radio', name='skill', value='nodejs', id='nodejs')
    input(type='radio', name='skill', value='angularjs', id='angularjs', checked)
    input(type='radio', name='skill', value='ionic', id='ionic')
    input(type='radio', name='skill', value='python', id='python')
    input(type='radio', name='skill', value='markdown', id='markdown')
  
    .section--skills__projects__skill
      each project, title in projects
        .section--skills__projects__skill__project(class='#{project.skills} wrapper--#{project.device}-width')
          h3.section--skills__projects__skill__project__title= title
          p.section--skills__projects__skill__project__desciption= project.desciption
          .wrapper(class='wrapper--#{project.device}')
            .device(class='device--#{project.device}')
            
              amp-iframe.section--skills__projects__skill__project__iframe(sandbox='allow-scripts allow-same-origin', height='#{heights[project.device]}', src='https://codepen.io/MaciejCaputa/embed/#{project.id}/?height=#{heights[project.device]}&theme-id=26236&default-tab=result&embed-version=2', scrolling='no', frameborder='0', allowtransparency, allowfullscreen)
              
